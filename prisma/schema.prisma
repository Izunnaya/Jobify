generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobPosting {
  id             String   @id @default(uuid())
  name           String
  description    String
  salary         Float?   @default(0)
  location       String
  author         String
  img            String?
  employmentType String?
  createdAt      DateTime @default(now())
}

model AppliedJobs {
  name           String
  salary         Float?   @default(0)
  location       String
  resume            String?
  createdAt      DateTime @default(now())
}